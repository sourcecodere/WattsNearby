<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/margin_small"
    android:layout_marginTop="@dimen/margin_small"
    android:background="@color/primary_light">

    <LinearLayout
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2"
        android:gravity="center_vertical|start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/connection_count"
            style="@style/AppTheme.SubTitle.Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            tools:text="1 x " />
    </LinearLayout>

    <ImageView
        android:id="@+id/connection_icon"
        android:layout_width="@dimen/icon_size_extra_large"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_weight="0.2"
        tools:src="@drawable/ic_chademo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/connection_title"
            style="@style/AppTheme.SubTitle.Dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="CHAdeMO" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/connection_level_title"
                style="@style/AppTheme.Body.Dark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="0.9"
                tools:text="Level 3: High (Over 40kW)" />

            <ImageView
                android:id="@+id/connection_fast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="0.1"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:contentDescription="@string/img_fast"
                tools:src="@drawable/ic_flash" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/connection_current"
                style="@style/AppTheme.Body.Dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                tools:text="DC" />

            <TextView
                android:id="@+id/connection_power"
                style="@style/AppTheme.Body.Dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:paddingEnd="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:text="400V/110A/44.0kW" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>


