<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>


        <!-- Used for settings preference theme -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <!-- Custom style for the bottom sheet fragment. -->
        <!-- Credits to: https://stackoverflow.com/a/35634293 -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppTheme.Title" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="AppTheme.SubTitle.Light" parent="@style/TextAppearance.AppCompat.Subhead.Inverse">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_sub_title</item>
    </style>

    <style name="AppTheme.SubTitle.Dark" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/primary_dark_text</item>
        <item name="android:textSize">@dimen/text_size_sub_title</item>
    </style>

    <style name="AppTheme.Caption" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
    </style>

    <style name="AppTheme.Caption.Dark" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/primary_dark_text</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
    </style>

    <style name="AppTheme.Caption.Small" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:textSize">@dimen/text_size_caption_small</item>
    </style>

    <style name="AppTheme.Body" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:textColorLink">@color/accent</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="AppTheme.Body.Dark" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textColorLink">@color/accent</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="AppTheme.Body.Small" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:textColorLink">@color/accent</item>
        <item name="android:textSize">@dimen/text_size_body_small</item>
    </style>

    <style name="AppTheme.Body.Dark.Small" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textColorLink">@color/accent</item>
        <item name="android:textSize">@dimen/text_size_body_small</item>
    </style>

    <style name="AppTheme.CustomSwitch" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlActivated">@color/accent</item>
    </style>

    <!-- App bar with search. -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Custom style for the bottom sheet fragment. -->
    <!-- Credits to: https://stackoverflow.com/a/35634293 -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <!-- Custom style for the bottom sheet fragment. -->
    <!-- Credits to: https://stackoverflow.com/a/35634293 -->
    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">@dimen/bottom_sheet_peek_height</item>
    </style>

    <!-- My location fab -->
    <style name="FloatingButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/accent</item>
    </style>

</resources>
